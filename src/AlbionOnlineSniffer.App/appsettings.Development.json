{
  "Sniffer": {
    "ActiveProfile": "default",
    "PacketCapture": {
      "AutoSelectDevice": true,
      "Filter": "udp port 5050",
      "TimeoutMs": 1000,
      "BufferSize": 10485760,
      "PromiscuousMode": false,
      "SnapLength": 65535,
      "EnableStatistics": true,
      "StatisticsIntervalSeconds": 30
    },
    "Parsing": {
      "BinDumpProvider": "FileSystem",
      "ItemMetadataProvider": "FileSystem",
      "BinDumpsPath": "ao-bin-dumps",
      "ItemsPath": "ITEMS",
      "EnableRemoteCache": true,
      "CacheDirectory": ".cache",
      "CacheExpirationHours": 24,
      "AutoReloadDumps": false,
      "DumpsVersion": "latest",
      "EnableDetailedLogs": true,
      "MaxParallelism": 4
    },
    "Publishing": {
      "PublisherType": "RabbitMQ",
      "ConnectionString": "amqp://myuser:mysecurepassword@tastechdeveloper.shop:5672",
      "Exchange": "albion.sniffer",
      "PersistentMessages": true,
      "SerializationFormat": "MessagePack",
      "EnableCompression": true,
      "BatchSize": 100,
      "BatchTimeoutMs": 100,
      "Retry": {
        "MaxAttempts": 3,
        "InitialDelayMs": 100,
        "MaxDelayMs": 5000,
        "UseExponentialBackoff": true,
        "UseJitter": true
      },
      "CircuitBreaker": {
        "Enabled": true,
        "FailureThreshold": 5,
        "SamplingDurationSeconds": 60,
        "BreakDurationSeconds": 30,
        "MinimumThroughput": 10
      },
      "EnableDeadLetterQueue": true,
      "DeadLetterQueue": "albion.sniffer.dlq"
    },
    "Profiles": [
      {
        "Name": "default",
        "Description": "Default profile for general use",
        "TierPalette": "classic",
        "FeatureToggles": {
          "ShowHideouts": true,
          "ShowDungeons": true,
          "ShowResources": true,
          "ShowPlayers": true,
          "ShowMobs": true,
          "ShowChests": true,
          "AlertOnPlayerProximity": false,
          "TrackGuildMembers": false,
          "TrackAlliances": false
        },
        "Thresholds": {
          "PlayerDistanceWarn": 100.0,
          "ResourceMinimumTier": 4.0,
          "MobMinimumTier": 4.0,
          "ChestMinimumTier": 4.0,
          "MaxTrackingDistance": 500.0
        },
        "Filters": {
          "HighlightGuilds": [],
          "HighlightAlliances": [],
          "TrackPlayers": [],
          "IgnoreGuilds": [],
          "IgnoreAlliances": [],
          "TrackItems": []
        },
        "Priority": 5
      },
      {
        "Name": "zvz",
        "Description": "Profile optimized for ZvZ combat",
        "TierPalette": "vibrant",
        "FeatureToggles": {
          "ShowHideouts": false,
          "ShowDungeons": false,
          "ShowResources": false,
          "ShowPlayers": true,
          "ShowMobs": false,
          "ShowChests": false,
          "AlertOnPlayerProximity": true,
          "TrackGuildMembers": true,
          "TrackAlliances": true
        },
        "Thresholds": {
          "PlayerDistanceWarn": 150.0,
          "ResourceMinimumTier": 8.0,
          "MobMinimumTier": 8.0,
          "ChestMinimumTier": 8.0,
          "MaxTrackingDistance": 1000.0
        },
        "Filters": {
          "HighlightGuilds": [],
          "HighlightAlliances": [],
          "TrackPlayers": [],
          "IgnoreGuilds": [],
          "IgnoreAlliances": [],
          "TrackItems": []
        },
        "Priority": 8
      },
      {
        "Name": "gank",
        "Description": "Profile optimized for ganking",
        "TierPalette": "minimal",
        "FeatureToggles": {
          "ShowHideouts": true,
          "ShowDungeons": true,
          "ShowResources": false,
          "ShowPlayers": true,
          "ShowMobs": false,
          "ShowChests": false,
          "AlertOnPlayerProximity": true,
          "TrackGuildMembers": false,
          "TrackAlliances": false
        },
        "Thresholds": {
          "PlayerDistanceWarn": 75.0,
          "ResourceMinimumTier": 6.0,
          "MobMinimumTier": 6.0,
          "ChestMinimumTier": 6.0,
          "MaxTrackingDistance": 300.0
        },
        "Filters": {
          "HighlightGuilds": [],
          "HighlightAlliances": [],
          "TrackPlayers": [],
          "IgnoreGuilds": [],
          "IgnoreAlliances": [],
          "TrackItems": []
        },
        "Priority": 7
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "AlbionOnlineSniffer": "Debug",
      "AlbionOnlineSniffer.Capture": "Debug",
      "AlbionOnlineSniffer.Core": "Debug",
      "AlbionOnlineSniffer.Queue": "Debug",
      "AlbionOnlineSniffer.Options": "Debug"
    },
    "Console": {
      "IncludeScopes": true,
      "TimestampFormat": "HH:mm:ss.fff "
    }
  }
}